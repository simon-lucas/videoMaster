package {	import flash.display.Sprite;	import flash.net.NetConnection;	import flash.net.NetStream;	import flash.media.Video;	import flash.events.*;	import caurina.transitions.Tweener;	public class FLVPlayer extends Sprite {		public var _videConnection:NetConnection;		public var _videStream:NetStream;		public var _vide:Video;		private var _duration:Number;		public function FLVPlayer() {			alpha=0;			_videConnection=new NetConnection();			_videConnection.connect(null);			_videStream=new NetStream(_videConnection);			_vide = new Video();			addChild(_vide);			_vide.attachNetStream(_videStream);			var netClient:Object = new Object();			//netClient.player=this;			netClient.onMetaData = onMetaData;			_videStream.client = netClient;		}		public function onMetaData(data:Object):void {			Tweener.addTween(this,{alpha:1,time:2,transition:"None"});			_duration=data.duration;					}		public function playVideo(video:String) {			_videStream.play(video);		}		public function stopVideo() {			_videStream.pause();		}		public function removeVideo() {			_videStream.close();			_vide.clear();			removeChild(_vide);		}	}}