package com.simon.utils{	import flash.text.TextField;	import flash.display.MovieClip;		import flash.events.Event;	import flash.system.System;	import flash.utils.Timer;   import flash.events.TimerEvent;	public class MemoryDisplay extends MovieClip {		private var _startmem:uint;		private var _timer:Timer;		private var memtext:TextField;		public function MemoryDisplay() {			super();			_timer=new Timer(5*1000,0);			_timer.addEventListener("timer",displayMemory);						_timer.start();			memtext=new TextField();			memtext.background = true;			memtext.textColor = 0x000000; 			memtext.height=40; 			memtext.width=200; 			addChild(memtext);			_startmem=(System.totalMemory/1024);			memtext.text="START     MEMORY: "+_startmem+"\n"+"CURRENT MEMORY: "+(System.totalMemory/1024)		}		public function displayMemory(e:Event):void {			memtext.text="START     MEMORY: "+_startmem+"\n"+"CURRENT MEMORY: "+(System.totalMemory/1024)		}	}}