package com.simon.utils {	import flash.display.Sprite;	import flash.display.Loader;	import flash.events.*;	import com.simon.utils.imageLoaderPlus;		public class image extends Sprite{		public var _imageLoader:imageLoader;		public var _image:Loader;		public var image_x:Number;		public var image_y:Number;				public var _contentWidth:Number;		public var _contentHeight:Number;		public var _title:String;		public var _fileName:String;		public var _bunker:EventDispatcher;				public function  image(w:Number,h:Number, position:String,scaleTo:String,progBarMode:String,pop:Boolean=false){			//trace("image",w,h)			super()			_bunker=new EventDispatcher()					_imageLoader=new imageLoader(this,w,h,0,0,scaleTo,progBarMode);			_imageLoader.addEventListener("onImageLoad",sendLoaded,false,0,true)			_imageLoader.iwidth=w;			_imageLoader.iheight=h;					if (position!=null){				_imageLoader.loc=position;			}else{				_imageLoader.loc="centre";			}			//_imageLoader.loc="centre";											}		public function loadImage(url:String):void{						_imageLoader.loadImage(url);								}		public function sendLoaded(e:Event):void{			_imageLoader.removeEventListener("onImageLoad",sendLoaded,false)			dispatchEvent(new Event("returnLoaded"));		}			public function returnSize(e:Event):void{			_contentWidth=e.target._contentWidth			_contentHeight=e.target._contentHeight			//trace("giigle",e.target._contentWidth,e.target._contentHeight)			dispatchEvent(new Event("returnSize"));		}		public function unloadImage():void{			trace("unloadImage")			_imageLoader.unloadImage();		}			}			}