package com.spiral.maryrose.charactercase.views{import flash.display.Sprite;import flash.utils.Timer;import flash.events.TimerEvent;public class VideoPlayButton extends ArrowSprite{		public var timer:Timer;	public var state:Boolean;		public function VideoPlayButton()	{		timer = new Timer(500,0);		timer.addEventListener(TimerEvent.TIMER,flashIt);					}	public function startFlash():void{		timer.start();		trace("start");	}		public function stopFlash():void{				timer.stop();		alpha=1;	}		public function flashIt(e:TimerEvent):void{		state=!state;		if (state){			alpha=.8;		}else{			alpha=1;		}	}		}}