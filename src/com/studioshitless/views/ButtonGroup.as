package com.studioshitless.views{import flash.display.Sprite;import com.studioshitless.events.ButtonGroupEvent;import com.studioshitless.events.IButtonEvent;public class ButtonGroup extends Sprite{		private var buttons:Array;	private var activeButton:uint;		public function ButtonGroup()	{		super();		buttons= new Array()	}		public function init(hilightButton:uint)	{		activeButton=hilightButton;		buttons[activeButton].setOn()			}		public function addButton(b:StandardButton, spacer:Number)	{		buttons.push(b);		b.addEventListener(IButtonEvent.BUTTONCLICKED, selectButton)		b.x=b.buttonID * spacer;		addChild(b)	}		public function selectButton(e:IButtonEvent):void{		activeButton= e.buttonID;		for (var i:uint=0; i < buttons.length; i++){			if (activeButton==i) {				trace("selectButton",i)				buttons[i].setOn()			}else{				trace("unselectButton",i)				buttons[i].setOff()				}					}		var evt:ButtonGroupEvent= new ButtonGroupEvent(ButtonGroupEvent.BUTTONCLICKED)		evt.buttonID=activeButton;		dispatchEvent(evt);	}		public function clearGroup():void{		for (var i:uint=0; i < buttons.length; i++){			buttons[i].removeEventListener(IButtonEvent.BUTTONCLICKED, selectButton)			if (buttons[i] && contains(buttons[i])) removeChild(buttons[i])		}		buttons=[];	}}}