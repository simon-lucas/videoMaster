package com.studioshitless.views{import flash.display.Sprite;import flash.events.MouseEvent;import com.spiral.events.ScrollEvent;/*extends a movie clip symbol*/public class NavArrow extends arrowButton{	public var direction:String;	public var debug:Boolean =true;	public function NavArrow(direction:String)	{		super();		this.direction=direction;		switch (direction){			case "up":			rotation=270			break;			case "down":			rotation=90			break;			case "left":			rotation=180			break;			case "right":			rotation=0			break;								}		//addEventListener(MouseEvent.MOUSE_DOWN, startScroll)		//addEventListener(MouseEvent.MOUSE_UP,stopScroll)		//addEventListener(MouseEvent.MOUSE_OUT,stopScroll)	}	public function startScroll(e:MouseEvent)	{		if (debug) trace("startScroll")		var scrollEvent:ScrollEvent =new ScrollEvent(ScrollEvent.ON_START);		scrollEvent.direction=direction;		dispatchEvent(scrollEvent)	}	public function stopScroll(e:MouseEvent)	{		var scrollEvent:ScrollEvent =new ScrollEvent(ScrollEvent.ON_STOP);		scrollEvent.direction=direction;		dispatchEvent(scrollEvent)	}				}}